@using Crito.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";

    var contactForm = new ContactForm();
}
<section>
    <div class="container">
        <div class="contact-box">
            <div></div>
            <h5>Visit us</h5>
            <div class="contact-info">
                <p>Sveavägen 31</p>
                <p>111 34 STOCKHOLM</p>
            </div>
        </div>
        <div class="contact-box">
            <div></div>
            <h5>Call us</h5>
            <div class="contact-info">
                <p>+46 (0) 121 470 50</p>
                <p>+46 (0) 121 470 51</p>
            </div>
        </div>
        <div class="contact-box">
            <div></div>
            <h5>Email us</h5>
            <div class="contact-info">
                <p>info@crito.com</p>
                <p>support@crito.com</p>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="container">
        <h2>Leave us a mesage for any information.</h2>
        <form asp-controller="Contacts" asp-action="Index" method="post" novalidate>
            <input asp-for="@contactForm.Name" type="text" placeholder="Name">
            <input asp-for="@contactForm.Email" type="email" placeholder="Email">
            <textarea asp-for="@contactForm.Message" placeholder="Your Message"></textarea>
            <div class="d-grid">
                <button type="submit" class="btn-theme">Send Message <i class="fa-solid fa-arrow-up-right></i></button>
            </div>
        </form>
    </div>
</section>

